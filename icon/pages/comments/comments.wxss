  color: #333;
}

.shareComment {
  width: 100%;
  height: 140rpx;
  position: relative;
}

.comTouxiang {
  width: 70rpx;
  height: 70rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
  border-radius: 50%;
  position: absolute;
}

.comName {
  height: 64rpx;
  line-height: 40px;
  position: absolute;
  top: 15rpx;
  left: 120rpx;
  font-size: 16px;
}

.comContent {
  width: 82%;
  left: 100rpx;
  top: 80rpx;
  line-height: 20px;
  font-size: 12px;
  white-space: pre-line;
  position: absolute;
}

.addComment {
  position: fixed;
  width: 100%;
  bottom: 100rpx;
}

.addComment textarea {
  width: 560rpx;
  margin-left: 30rpx;
  line-height: 50rpx;
  position: fixed;
  border: 1rpx #e2e2e2 solid;
  font-size: 14px;
  bottom: 8rpx;
}

.addComment textarea .plaClass {
  line-height: 70rpx;
}

.addComment button {
  width: 120rpx;
  height: 70rpx;
  position: fixed;
  right: 30rpx;
  font-size: 14px;
  line-height: 70rpx;
  bottom: 8rpx;
}
