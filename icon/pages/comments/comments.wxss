  width: 30rpx;
}

.comment_box{
  height: 60rpx;
  margin-top: 15rpx;
  position: absolute;
  left: 315rpx;
}

.comment_box image{
  height: 30rpx;
  width: 30rpx;
}

.like_box{
  height: rpx;
