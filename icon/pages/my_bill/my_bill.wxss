.wrap {
    width: 100%;
    height: 100%;
    font-family: 微软雅黑;
}

.my_mess_box {
    width: 100%;
    height: 80px;
    border-bottom: 1px solid#e2e2e2;
}

.img_box {
    width: 50px;
    height: 50px;
    margin: 10px auto;
}

.my_mess_box image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}

.nick_name {
    width: 100%;
    height: 14px;
    color: #ccc;
    font-size: 14px;
    line-height: 14px;
    text-align: center;
    display: block;
}

.all_box {
    width: 100%;
    height: 57px;
    position: relative;
}

.pulish_box {
    width: 100%;
    height: 55px;
    position: relative;
    border-bottom:1px solid#e2e2e2;
    background: #fff;
    z-index: 5; 
}

.pulish_box image {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    margin-left: 15px;
    margin-top: 15px;
}

.describ_word {
    width: 100px;
    height: 22px;
    font-size: 12px;
    position: absolute;
    left: 60px;
    top: 10px;
    color: #333;
    line-height: 22px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

