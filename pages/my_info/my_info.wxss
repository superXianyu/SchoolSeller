.wrap {
    width: 100%;
    height: 100%;
    font-family: 微软雅黑;
}

.my_mess_box {
    width: 100%;
    height: 80px;
    border-bottom: 1px solid#e2e2e2;
}

.img_box {
    width: 50px;
    height: 50px;
    margin: 10px auto;
}

.my_mess_box image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}

.nick_name {
    width: 100%;
    height: 14px;
    color: #ccc;
    font-size: 14px;
    line-height: 14px;
    text-align: center;
    display: block;
}

.mess_list {
  width: 100%;
  height: 100%;
  background: #fff;
}

.school_box {
  width: 60%;
  height: 55px;
  position: relative;
  font-size: 14px;
  color: #333;
  padding-left: 15px;
  line-height: 55px;
}

.school {
  width: 100%;
  height: 55px;
  font-size: 14px;
  line-height: 55px;
  border-bottom: 1px solid#e2e2e2;
  color: #333;
  position: absolute;
  left: 70px;
  top: 0px;
}

.sure {
    width: 33%;
    height: 40px;
    background: #f10215;
    margin: 10px auto;
    line-height: 40px;
    font-size: 14px;
    text-align: center;
    color: #fff;
}