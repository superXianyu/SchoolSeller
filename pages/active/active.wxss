}

.share_title{
  position: relative;
  height: 55rpx;
  width: 100%;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.share_title input{
  position: absolute;
  height: 55rpx;
  line-height: 14px;
}

.share_content{
  width: 100%;
  margin-left: 30rpx;
  margin-top: 15rpx;
}

.share_content input{
