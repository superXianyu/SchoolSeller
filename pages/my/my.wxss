.wrap {
    width: 100%;
    height: 100%;
    background: #fff;
    font-family: 微软雅黑;
}

.touxiang_box {
    width: 100%;
    height: 100px;
    position: relative;
}

.touxiang {
    width: 70px;
    height: 70px;
    margin-top: 15px;
    margin-left: 15px;
    border-radius: 50%;
}

.nick_name {
    width: 150px;
    height: 100px;
    position: absolute;
    top: 0px;
    line-height: 100px;
    font-size: 16px;
    font-family: 微软雅黑;
    left: 100px;
}

.cut_line {
    width: 100%;
    height: 10px;
    background: #e2e2e2;
}

.goods_box {
    width: 100%;
    height: 45px;
    position: relative;
}

.my_goods {
    width: 24px;
    height: 24px;
    margin-left: 15px;
    margin-top: 11px;
}

.describ_word {
    width: 100px;
    height: 45px;
    line-height: 45px;
    position: absolute;
    left: 55px;
    font-size: 14px;
}

.redDot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    position: absolute;
    right: 15px;
    top: 15px;
    background: #f10215;
    color: #fff;
    font-size: 10px;
    text-align: center;
    z-index: 10;
}

.add_active {
    width: 116rpx;
    height: 116rpx;
    position: fixed;
    bottom: 55rpx;
    right: 45rpx;
    border-radius: 50%;
    background-color: #ffe04a;
}

.add_active image {
    width: 66rpx;
    height: 66rpx;
    margin-top: 25rpx;
    margin-left: 25rpx;
}
